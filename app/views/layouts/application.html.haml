!!!
%html
  %head
    %title NgdaleReading
    = stylesheet_link_tag    "http://twitter.github.com/bootstrap/1.4.0/bootstrap.min.css"
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
    :plain
      <script type="text/javascript">

      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-28034452-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

      </script>
  %body
    .topbar
      .topbar-inner
        .container
          -if @daily_reading
            %a.brand= "North Gardendale Bible Reading - #{@daily_reading.date.strftime("%A %B, ")} #{@daily_reading.date.strftime("%-d").to_i.ordinalize}"
          -else
            %a.brand= "North Gardendale Bible Reading"
          %ul.nav
            -if params["action"] == "home"
              %li
                %a{:href => "#daily"} Skip to Daily
              %li
                %a{:href => "#weekly"} Skip to Weekly
              %li
                %a{:href => "#monthly"} Skip to Monthly
    .container
      .content
        = yield
