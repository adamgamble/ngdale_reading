!!!
%html
  %head
    %title NgdaleReading
    = stylesheet_link_tag    "http://twitter.github.com/bootstrap/1.4.0/bootstrap.min.css"
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .topbar
      .topbar-inner
        .container
          %a.brand= "North Gardendale Bible Reading - #{Time.now.strftime("%A %B, the ")} #{Time.now.strftime("%-d").to_i.ordinalize}"
          %ul.nav
            -if params["action"] == "home"
              %li
                %a{:href => "#daily"} Skip to Daily
              %li
                %a{:href => "#weekly"} Skip to Weekly
              %li
                %a{:href => "#monthly"} Skip to Monthly
    .container
      .content
        = yield
